
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>M-Files Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/loginForm.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
 
</head>
<body>
    <div class="login-form">
        <form action="/Login/Index" method="post">
            <img class="mfLoginHeaderLogo" src="http://127.0.0.1/assets/icons/svg/M-Files_logo_blue.svg" alt="M-Files logo">
            <p class="text-center">Log in with your M-Files credentials</p>
            <div class="form-group">
                <input type="text" class="form-control" name="Name" placeholder="Username" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="Password" placeholder="Password" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-light">Log in</button>
                @if (ViewBag.Error == "")
                {
                    <p class="text-center" style="color:red;visibility:hidden;">Authentication Failed</p>
                }
                else
                {
                    <p class="text-center" style="color:red;visibility:visible;">Authentication Failed</p>
                }
            </div>
            

        </form>
      
    </div>
</body>
</html>

